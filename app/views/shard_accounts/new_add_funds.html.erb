<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="<%= asset_path 'shop.css' %>">
</head>

<div class="top-navigation">
  <%= button_to "Return to Shop", shop_index_path, class: "btn return-btn", method: :get %>
  <div class="shard-balance-display">
    <p><strong>Shard Balance:</strong> <%= current_user.shard_account.balance %> Shards</p>
  </div>
</div>

<h1>Purchase Shards</h1>

<%= form_with url: add_funds_shard_accounts_path, method: :post do %>
<!--  <div>-->
<!--    <label for="amount">Amount:</label>-->
    <%#= number_field_tag :amount, nil, required: true %>
<!--  </div>-->

  <h2>Card Information</h2>
  <div>
    <label for="card_number">Card Number:</label>
    <%= text_field_tag :card_number, nil, placeholder: "1234 5678 9012 3456", required: true %>
  </div>

  <div>
    <label for="expiry_date">Expiry Date (MM/YY):</label>
    <%= text_field_tag :expiry_date, nil, placeholder: "MM/YY", required: true %>
  </div>

  <div>
    <label for="cvv">CVV:</label>
    <%= text_field_tag :cvv, nil, placeholder: "123", required: true %>
  </div>

  <div>
    <%= submit_tag "Add Funds", class: "btn btn-primary" %>
  </div>
<% end %>

<div>
  <%= button_to "Return to Shop", shop_index_path, class: "btn btn-secondary" %>
</div>
