<div class="shop-tabs">
  <a href="#shop-items-section" class="shop-tab">Shop Items</a>
  <a href="#shard-purchase-section" class="shop-tab">Purchase Shards</a>
</div>

<div id="shop-items-section">
  <h2>Shop Items</h2>
  <div class="shop-items">
    <% @shop_items.each do |item| %>
      <div class="shop-item">
        <h3><%= item.name %></h3>
        <p><%= item.price_in_shards %> Shards</p>
        <%= button_to "Buy Now", buy_item_shard_accounts_path(item_id: item.id), method: :post, class: "btn-buy" %>
      </div>
    <% end %>
  </div>
</div>

<div id="shard-purchase-section">
  <h2>Choose Your Shards Package</h2>
  <div class="shard-options">
    <% ShardAccount::SHARD_PACKAGES.each do |package| %>
      <div class="shard-tile">
        <h3><%= package[:shards] %> Shards</h3>
        <p>$<%= '%.2f' % package[:price] %></p>
        <%= button_to "Buy Now", add_funds_shard_accounts_path(price: package[:price], shards: package[:shards]), method: :post, class: "btn-tile" %>
      </div>
    <% end %>
  </div>
</div>
